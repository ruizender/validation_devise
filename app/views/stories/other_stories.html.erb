<div class="row">
<% current_user.stories.each do |user_story| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= link_to(image_tag(user_story.picture), user_story) if user_story.picture? %>
      <div class="caption">
        <h3><%= user_story.title %></h3>
        <small><%= time_ago_in_words(user_story.created_at) %> ago</small>
        <p><%= user_story.content.truncate(150)  %></p>
        <p><%= link_to 'Show', user_story, class: "btn btn-primary" %>  <%= link_to 'Edit', edit_story_path(user_story), class: "btn btn-warning" %></p>
        <p><%= link_to 'Destroy', user_story, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
<% end %>
</div>